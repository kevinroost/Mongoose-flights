<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/show.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div>
      <%= flight.airline %>
    </div>
    <div>Destination: </div>
    <div>
      <%= flight.airport %>
    </div>
    <div>Flight Number: </div>
    <div>
      <%= flight.flightNo %>
    </div>
    <div>Departure: </div>
    <div>
      <%= flight.departs %>
    </div>
    <div>
      <a href="/flights/<%= flight._id %>/edit">Edit Flight Details</a>
    </div>
  </section>
  <table>
    <thead>
      <tr>
        <th>Seat</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if (flight.tickets.length) {flight.tickets.forEach(ticket => { %>
      <tr>
        <td><%= ticket.seat %></td>
        <td>$<%= ticket.price %> USD</td>
        <td>
          <form action="/flights/<%= flight._id %>/tickets/<%= ticket._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete Ticket</button>
          </form>
        </td>
      </tr>
      <% })} %>
    </tbody>
  </table>
  <form action="/flights/<%= flight._id %>/tickets" method="POST">
    <label for="seat-input">Seat</label>
    <input type="text" name="seat" id="seat-input">
    <label for="price-input">Price</label>
    <input type="text" name="price" id="price-input">
    <button type="submit">Add Ticket</button>
  </form>


<%- include('../partials/footer') %>